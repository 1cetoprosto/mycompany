MODULE ItemPurchase;

REQUIRE MasterData, Item;

NAMESPACE MasterData;

canBePurchased 'Предназначен для закупки' = DATA BOOLEAN (Item);

WHEN SET(Item i IS Item) DO {
    canBePurchased(i) <- TRUE;
}

cost 'Себестоимость' = DATA NUMERIC[10,2] (Item) NONULL CHARWIDTH 15 NOFLEX;

EXTEND FORM item 
    PROPERTIES(i) canBePurchased, cost
;

DESIGN item {
    pane {
        NEW purchase {
            caption = 'Закупка';
            MOVE PROPERTY (canBePurchased(i));
            MOVE PROPERTY (cost(i));
        }
    }
}
