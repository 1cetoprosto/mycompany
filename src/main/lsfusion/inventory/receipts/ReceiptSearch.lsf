MODULE ReceiptSearch;

REQUIRE Receipt, ResLedger, Doc;

NAMESPACE Inventory;

available 'Доступный остаток' (Receipt r, Product p) = available(location(r), p);

@defineDocSearch(receipt, product, initialDemand,r);

EXTEND FORM receipt
    PROPERTIES (r, itm) available
    FILTERGROUP active
        FILTER 'Активный' active(itm) 'F10' DEFAULT 
;