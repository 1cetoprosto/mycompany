MODULE PurchaseOrderSendRequest;

REQUIRE PurchaseOrder, PurchaseOrderStatus, PurchaseOrderSent;

NAMESPACE Purchase;

sendRequest 'Отправить запрос' (Order o){
    sentRequestDateTime(o) <- currentDateTime();
    sent(o) <- TRUE;
    MESSAGE 'Запрос отправлен';    
}

EXTEND FORM order
     PROPERTIES (o) SHOWIF (status(o)=OrderStatus.draft OR status(o)=OrderStatus.requestSent) sendRequest BACKGROUND (CASE WHEN NOT sent(o) THEN nextAction());
;

DESIGN order {
    statusPane {
        statusActions {
            MOVE PROPERTY (sendRequest(o));
        }
    }
}

