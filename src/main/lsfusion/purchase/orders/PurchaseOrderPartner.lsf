MODULE PurchaseOrderPartner;

REQUIRE PurchaseOrder;

NAMESPACE Purchase;

EXTEND FORM partner
    OBJECTS pl = Order
    PROPERTIES(pl) READONLY nameStatus, number, dateTime, nameVendor, nameLocation, scheduledDateTime
    PROPERTIES(pl) READONLY untaxedAmount, totalTax, totalAmount
    FILTERS vendor(pl) = p
;

DESIGN partner {
    tabs {
        NEW pOrders {
            caption = 'Заказы поставщикам';
            MOVE BOX(pl);
        }
    }
}