MODULE PurchaseOrderPartner;

REQUIRE PurchaseOrder;

NAMESPACE Purchase;

EXTEND FORM partner
    OBJECTS pl = Order
    PROPERTIES(pl) READONLY nameStatus, dateTime, number, nameVendor, nameLocation, scheduledDate
    PROPERTIES(pl) READONLY untaxedAmount, totalTax, totalAmount
    FILTERS vendor(pl) = p
;

DESIGN partner {
    tabs {
        NEW pOrders {
            caption = 'Заказы на закупку';
            MOVE BOX(pl);
        }
    }
}