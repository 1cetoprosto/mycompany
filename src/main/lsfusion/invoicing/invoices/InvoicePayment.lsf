MODULE InvoicePayment;

REQUIRE Invoice, Payment;

NAMESPACE Invoicing;

paid 'Оплачено' = DATA NUMERIC[14,2](Payment, Invoice);
payment 'Оплачено' (Invoice i) = GROUP SUM paid(Payment p, i);

EXTEND FORM invoices   
    PROPERTIES(i) READONLY payment  
;

EXTEND FORM invoice
    PROPERTIES (ii) payment
;