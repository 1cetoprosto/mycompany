MODULE InvoiceItem;

REQUIRE Invoice;

NAMESPACE Invoicing;

EXTEND FORM item
    OBJECTS il = InvoiceLine
    PROPERTIES(il) READONLY nameStatus, dateTime, nameCustomer, nameCompany, quantity, unitPrice
    PROPERTIES(il) EDIT
    FILTERS item(il) = i
;

DESIGN item {
    operations {
        NEW invoices {
            caption = 'Расходные накладные';
            MOVE BOX(il);
        }
    }
}