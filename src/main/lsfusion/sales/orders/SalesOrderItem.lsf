MODULE SalesOrderItem;

REQUIRE SalesOrderStatus;

NAMESPACE Sales;

EXTEND FORM item
    OBJECTS sl = OrderLine
    PROPERTIES(sl) READONLY nameStatus, dateTime, seriesNumber, nameCustomer, nameLocation
    PROPERTIES(sl) READONLY nameItem, quantity, unitPrice
    FILTERS item(sl) = i
;

DESIGN item {
    tabs {
        NEW sOrders {
            caption = 'Заказы на продажу';
            MOVE BOX(sl);
        }
    }
}