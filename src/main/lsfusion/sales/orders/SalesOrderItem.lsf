MODULE SalesOrderItem;

REQUIRE SalesOrder;

NAMESPACE Sales;

EXTEND FORM item
    OBJECTS sl = OrderLine
    PROPERTIES(sl) READONLY nameStatus, number, dateTime, nameCustomer, nameLocation, quantity, unitPrice
    PROPERTIES(sl) EDIT
    FILTERS item(sl) = i
;

DESIGN item {
    operations {
        NEW sOrders {
            caption = 'Заказы покупателям';
            MOVE BOX(sl);
        }
    }
}