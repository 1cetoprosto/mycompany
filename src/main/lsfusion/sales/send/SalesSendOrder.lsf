MODULE SalesSendOrder;

REQUIRE SalesOrderConfirmed;

NAMESPACE Sales;

sendOrder 'Отправить заказ на email' (Order o){
    MESSAGE 'Заказ отправлен';    
}

EXTEND FORM order
     PROPERTIES(o) SHOWIF confirmed(o) sendOrder;
;

DESIGN order {
    secondaryActions {
        MOVE PROPERTY(sendOrder(o));
    }
}
