MODULE SalesPriceTypeMarkup;

REQUIRE SalesPriceType;

NAMESPACE Sales;

markup 'Надбавка' = DATA NUMERIC[10,2] (PriceType, Item);

EXTEND FORM pricelistType
    OBJECTS i = Item
    PROPERTIES name(i) READONLY, markup(pt, i)
;

DESIGN pricelistType {
    NEW details BEFORE TOOLBARBOX {
        fill = 4;
        MOVE BOX(i);
    }
}
